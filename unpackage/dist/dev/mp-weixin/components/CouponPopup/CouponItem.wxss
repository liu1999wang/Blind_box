.coupon-item {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}
.coupon-item:last-child {
  margin-bottom: 16rpx;
}
.coupon-item.unactive .discount-money {
  color: #A5A7B2;
}
.coupon-item.unactive .detail {
  color: #A5A7B2;
}
.coupon-item.unactive .action .btn {
  background-color: #BBBBBB;
  color: #fff;
}
.coupon-item.active .discount-money {
  color: #e52302;
}
.coupon-item.active .action .btn {
  background-color: #f52302;
  color: #fff;
}
.coupon-item .discount-money {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-right: 1px dashed #e1e1e1;
  margin-right: 20rpx;
}
.coupon-item .discount-money .price {
  font-size: 50rpx;
  font-weight: 500;
}
.coupon-item .discount-money .price .unit {
  font-size: 24rpx;
}
.coupon-item .discount-money .price.small {
  font-size: 40rpx;
}
.coupon-item .discount-money .type {
  margin-top: 6rpx;
  font-size: 22rpx;
}
.coupon-item .detail {
  flex: 1;
}
.coupon-item .detail .title {
  font-size: 30rpx;
  display: flex;
  font-size: 500;
  align-items: center;
}
.coupon-item .detail .label {
  padding: 0 12rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  margin-left: 8rpx;
  color: #F27233;
  position: relative;
  border: 1px solid #F27233;
  display: inline;
  border-radius: 30rpx;
}
.coupon-item .detail .valid-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.coupon-item .detail .limit-type {
  font-size: 22rpx;
  margin-top: 10rpx;
}
.coupon-item .icon-arrow-right {
  font-size: 46rpx;
  margin-right: 10rpx;
  color: gray;
}
.coupon-item .action {
  width: 180rpx;
  display: flex;
  justify-content: center;
}
.coupon-item .action view {
  width: 130rpx;
  line-height: 44rpx;
  font-size: 22rpx;
  text-align: center;
  border-radius: 1000rpx;
}

