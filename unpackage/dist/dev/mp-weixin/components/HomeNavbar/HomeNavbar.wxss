.header {
  position: fixed;
  z-index: 1000;
}
.logo {
  height: 60rpx;
}
.home-nav {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  z-index: 10;
  transition: background 0.2s;
  -webkit-transition: background 0.2s;
}
.home-nav .nav-content {
  padding: 0 18rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.home-nav .nav-content .title {
  font-size: 42rpx;
  font-weight: bold;
  color: #FFFFFF;
  transition: font-size 0.5s, color 0.5s;
  -webkit-transition: font-size 0.5, color 0.5s;
}
.home-nav .nav-content .search-btn {
  width: 134rpx;
  height: 52rpx;
  background: #FD5907;
  opacity: 0.8;
  border-radius: 26rpx;
  margin-left: 20rpx;
  font-weight: 500;
  color: #FFE7B0;
  font-size: 26rpx;
  line-height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-nav .nav-content .search-btn .search-icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 2rpx;
}
.home-nav.white {
  box-shadow: 0px 14rpx 30rpx 0px rgba(226, 222, 204, 0.4);
}
.home-nav.white .nav-content .title {
  color: black;
  font-size: 36rpx;
}
.home-nav.white .nav-content .search-btn {
  color: white;
  opacity: 1;
}

