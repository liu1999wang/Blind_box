.count-down {
  font-size: 26rpx;
  display: inline;
}
.count-down .date-time {
  display: flex;
  align-items: center;
}
.count-down .date-time view {
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background-color: #e52302;
  border-radius: 3px;
  color: #fff;
}
.count-down .date-time .dd {
  padding: 0 8rpx;
}
.count-down .date-time .time {
  width: 48rpx;
}
.count-down .date-time .ss {
  padding: 0 8rpx;
  width: 70rpx;
  text-align: left;
}
.count-down .date-time .pass .dd,
.count-down .date-time .pass .time,
.count-down .date-time .pass .ss {
  background-color: #BBBBBB;
}
.count-down .date-time .pass .colon {
  color: #BBBBBB;
}
.count-down .colon {
  margin: 0 2px;
  font-size: 32rpx;
}

