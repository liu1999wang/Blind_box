.header {
  position: fixed;
  z-index: 1000;
}
.home-nav {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  z-index: 10;
}
.home-nav .nav-content {
  padding: 0 18rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.home-nav .nav-content .back-icon {
  width: 34rpx;
  height: 29rpx;
  margin: 0rpx 20rpx 0rpx 20rpx;
}
.home-nav .nav-content .empty-icon {
  width: 34rpx;
  height: 29rpx;
  margin: 0rpx 20rpx 0rpx 20rpx;
}
.home-nav .nav-content .title {
  font-size: 42rpx;
  width: 430rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-weight: bold;
  color: black;
}
.header.dark .title {
  color: #ddd;
}

