.tips {
  margin: 100rpx 60rpx;
}
.tips .title {
  font-weight: 500;
  border-left: 6rpx solid #FFCC00;
  padding-left: 4rpx;
  margin-bottom: 10rpx;
}
.tips .content {
  font-size: 90%;
}
.cover-c {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 300rpx;
}
.cover-c .left {
  margin: 0rpx 10rpx;
}
.cover-c .left .thumb {
  background: #F8EFC5;
  border: 4rpx solid #FFB640;
  border-radius: 6rpx;
  width: 150rpx;
  height: 200rpx;
}
.cover-c .left .title {
  font-weight: 500;
  font-size: 28rpx;
  text-align: center;
}
.cover-c .left .total {
  text-align: center;
}
.cover-c .cover-text {
  margin: 0rpx 30rpx;
}
.cover-c .right {
  margin: 0rpx 10rpx;
}
.cover-c .right .thumb {
  background: #F8EFC5;
  border: 4rpx solid #FFB640;
  border-radius: 6rpx;
  width: 150rpx;
  height: 200rpx;
}
.cover-c .right .title {
  font-weight: 500;
  font-size: 28rpx;
  text-align: center;
}
.cover-c .right .total {
  text-align: center;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.footer .footer-button {
  margin: 0 auto;
  margin-bottom: 60rpx;
  width: 660rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #ffcc00;
  box-shadow: 0 0 20rpx rgba(255, 220, 0, 0.6);
  border-radius: 200rpx;
}
.float-btn {
  position: fixed;
  right: 0rpx;
  top: 260rpx;
  width: 150rpx;
  height: 66rpx;
  background: #FFEFB3;
  border-radius: 33px 0px 0px 33px;
  padding: 0rpx 14rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-weight: 500;
  font-size: 24rpx;
}
.float-btn image {
  width: 30rpx;
  height: 36rpx;
}
.float-btn.my {
  top: 130rpx;
}
.float-btn.my image {
  width: 30rpx;
  height: 40rpx;
}

