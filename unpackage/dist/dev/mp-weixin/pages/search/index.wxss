.header {
  padding: 0 30rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 100;
}
.header .search-input-wrapper {
  height: 70rpx;
  border-radius: 42rpx;
  background-color: #f5f5f5;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.header .search-input-wrapper .icon-search {
  margin-right: 10rpx;
  color: #B3B3B3;
}
.header .search-input-wrapper input {
  background-color: transparent;
  padding: 0;
  height: 100%;
  line-height: 70rpx;
}
.category-wrapper {
  padding: 30rpx 0rpx;
  box-sizing: border-box;
}
.category-wrapper .category-item-wrapper {
  margin-bottom: 10rpx;
}
.category-wrapper .category-item-wrapper .level1 {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 30rpx;
  margin: 0px;
  background: #fafafa;
  color: #777;
}
.category-wrapper .category-item-wrapper .level1 .text {
  font-size: 32rpx;
}
.category-wrapper .category-item-wrapper .level1 .icon {
  font-weight: 500;
  font-size: 30rpx;
}
.category-wrapper .category-item-wrapper .actived {
  background: #f1f1f1;
  color: #666;
}
.category-wrapper .category-item-wrapper .level2 {
  display: flex;
  flex-wrap: wrap;
}
.category-wrapper .category-item-wrapper .level2 .level2-item {
  background-color: #f5f5f5;
  margin: 16rpx 12rpx 8rpx 0;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 26rpx;
  border-radius: 3px;
}
.product-list {
  padding: 180rpx 30rpx 30rpx 30rpx;
}
.product-list.guest-list {
  padding-top: 130rpx;
}
.guess-title {
  font-weight: bold;
  padding-bottom: 10rpx;
}

