.score-c {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.score-c .headimg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.score-c .score-key {
  flex-grow: 1;
  margin-left: 10rpx;
  font-weight: normal;
  font-weight: 500;
}
.score-c .score-value {
  font-weight: 500;
}
.score-c .icon-arrow-right {
  font-size: 40rpx;
}
.card {
  width: 700rpx;
  height: 320rpx;
  margin: 40rpx auto;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  border-radius: 28rpx;
  padding: 60rpx 60rpx;
  box-sizing: border-box;
}
.card.card2 {
  background: url("https://bus-cdn.hquesoft.com/box/card1.png");
  background-repeat: no-repeat;
  background-size: 100% auto;
  box-shadow: 0px 18rpx 27rpx 0px rgba(255, 106, 35, 0.3);
}
.card.card1 {
  background: url("https://bus-cdn.hquesoft.com/box/card2.png");
  background-repeat: no-repeat;
  background-size: 100% auto;
  box-shadow: 0px 18rpx 27rpx 0px rgba(198, 141, 3, 0.3);
}
.card .top {
  display: flex;
  align-items: center;
}
.card .top .title {
  font-size: 46rpx;
  font-weight: bold;
  color: #FFFFFF;
  flex-grow: 1;
}
.card .top .total {
  background: rgba(0, 0, 0, 0.2);
  text-align: center;
  color: white;
  padding: 4rpx 30rpx;
  border-radius: 30rpx;
  font-weight: 500;
}
.card .desc {
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  opacity: 0.8;
  margin-top: 20rpx;
}
.card .price-c {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.card .price-c .price {
  flex-grow: 1;
  color: #666;
  font-weight: 500;
  font-size: 28rpx;
}
.card .price-c .button {
  font-weight: 500;
  color: #FFFFFF;
  line-height: 40px;
}
.card .price-c .icon-arrow-right {
  font-weight: 500;
  color: #FFFFFF;
  font-size: 40rpx;
}

