.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.footer .footer-button {
  margin: 0 auto;
  margin-bottom: 10rpx;
  width: 600rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #ffcc00;
  box-shadow: 0 0 20rpx rgba(255, 220, 0, 0.6);
  border-radius: 80rpx;
}
.content-box {
  margin: 24rpx;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-radius: 10rpx;
  background-color: #ffcc00;
  color: #fff;
}
.content-box .user-headimg {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}
.content-box .score {
  font-size: 30rpx;
  font-weight: 900;
  color: #000000;
  margin-top: 16rpx;
}
.title {
  padding: 0 24rpx;
  margin: 0 24rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 34rpx;
  font-weight: 500;
  position: relative;
}
.title:after {
  content: '';
  position: absolute;
  left: 0;
  top: 18rpx;
  width: 3px;
  height: 34rpx;
  background-color: #ffcc00;
}
.list {
  margin: 0 24rpx;
}
.list-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1px solid #f3f3f3;
}
.list-item .order-number {
  font-size: 26rpx;
  margin-top: 6rpx;
}
.list-item .date-time {
  font-size: 24rpx;
  margin-top: 6rpx;
}
.list-body {
  flex: 1;
}
.right {
  font-size: 40rpx;
}

