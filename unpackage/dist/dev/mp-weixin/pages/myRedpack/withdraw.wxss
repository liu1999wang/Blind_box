.container {
  padding: 0rpx 30rpx;
}
.withdraw-limit-btn {
  text-decoration: underline;
  margin-bottom: 30rpx;
  text-align: center;
  color: gray;
  font-size: 26rpx;
}
.gateway-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.gateway-list .scope-item {
  border-radius: 6rpx;
  border: 2rpx solid #333;
  text-align: center;
  line-height: 100rpx;
  height: 90rpx;
  width: 200rpx;
  flex: 0 0 200rpx;
  margin-left: 22rpx;
  margin-top: 20rpx;
}
.gateway-list .scope-item.activited {
  background: #FFCC00;
  border: 2rpx solid #FFCC00;
}
.item {
  border-bottom: 1px solid #f1f1f1;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
  margin-top: 50rpx;
}
.item-title {
  padding: 0 24rpx;
  margin: 0 0rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 34rpx;
  font-weight: 500;
  position: relative;
  flex-grow: 1;
}
.item-title:after {
  content: '';
  position: absolute;
  left: 0;
  top: 18rpx;
  width: 3px;
  height: 34rpx;
  background-color: #ffcc00;
}
.text-input {
  height: 80rpx;
}
.input {
  margin-top: 20rpx;
  padding-left: 30rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.footer .footer-button {
  margin: 0 auto;
  margin-bottom: 10rpx;
  width: 600rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #ffcc00;
  box-shadow: 0 0 20rpx rgba(255, 220, 0, 0.6);
  border-radius: 80rpx;
}

