page {
  background-color: #f5f5f5;
}
.pay-price-box {
  height: 250rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background: #FFCC01;
}
.pay-price-box .price {
  font-size: 60rpx;
}
.pay-price-box .price .unit {
  font-size: 34rpx;
}
.list {
  background-color: #fff;
  border-radius: 8rpx;
}
.list-item {
  height: 110rpx;
}
.list-item text {
  font-size: 28rpx;
}
.list-item .type-logo {
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}
.disabled {
  color: #a0a0a0;
}
.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
