.tips {
  color: #666;
  font-size: 28rpx;
  text-align: center;
}
.scan {
  margin: 300rpx auto 50rpx auto;
  display: block;
  width: 300rpx;
  height: 300rpx;
}
.code {
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 100rpx;
  margin-bottom: 20rpx;
}
.qrcode {
  width: 400rpx;
