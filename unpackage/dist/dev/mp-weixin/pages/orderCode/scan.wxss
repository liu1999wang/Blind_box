.order-c .list-item {
  display: flex;
  align-items: center;
  position: relative;
}
.order-c .list-item .status-text {
  font-weight: 500;
}
.order-c .list-item .body {
  flex: 1;
  display: flex;
  align-items: center;
  font-weight: 500;
}
.order-c .list-item-title {
  flex: 1;
}
.order-c .address-c {
  display: flex;
  background: white;
}
.order-c .address-c .al-icon-coordinates {
  margin-top: 6rpx;
}
.order-c .address-c .body {
  margin-left: 30rpx;
}
.order-c .address-c .body .name {
  font-size: 30rpx;
  font-weight: 500;
}
.order-c .address-c .body .detail {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #777;
}
.order-c .products-c {
  background: white;
  margin-top: 20rpx;
}
.order-c .price-wrap {
  background: white;
