.locked-float-btn {
  background: #FEEF5C;
  color: black;
  position: fixed;
  right: 0rpx;
  top: 500rpx;
  padding: 20rpx 10rpx 20rpx 30rpx;
  text-align: center;
  border-radius: 60rpx 0rpx 0rpx 60rpx;
  font-size: 26rpx;
  min-width: 60rpx;
}
.locked-float-btn .icon-lock {
  font-size: 30rpx;
}
button {
  padding: 0;
  margin: 0;
  line-height: 50rpx;
  font-size: 24rpx;
  border-radius: 0px;
  position: relative;
}
button.bg-white {
  box-shadow: 0 2rpx 8rpx #cfcfcf;
}
button:after {
  border: none;
}
.footer-c {
  position: fixed;
  bottom: 170rpx;
  width: 100%;
  left: 0rpx;
  padding: 0rpx 30rpx;
  display: flex;
  box-sizing: border-box;
}
.select-box-btn {
  font-size: 28rpx;
  flex-grow: 1;
  min-width: 150rpx;
  padding: 16rpx 10rpx;
  text-align: center;
}
.enter-btn:nth-child(2) {
  margin-left: 60rpx;
}
.cancel-btn {
  width: 150rpx;
  flex: 0 0 150rpx;
  padding: 16rpx 0rpx;
  text-align: center;
}
.select-all {
  width: 150rpx;
  flex: 0 0 150rpx;
  margin-right: 20rpx;
  padding: 16rpx 0rpx;
  text-align: center;
}
.header-tabs {
  width: 100%;
  height: 90rpx;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: #ffffff;
}
.header-tabs .tab-item {
  flex: 1;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #c6c6c6;
  font-weight: 500;
}
.header-tabs .tab-item.active {
  color: #333333;
  position: relative;
  font-weight: 500;
}
.header-tabs .tab-item.active .text {
  color: #370eee;
  font-size: 32rpx;
  font-weight: 900;
  border-bottom: 7rpx solid #333333;
  padding: 0rpx 0rpx 4rpx 0rpx;
}
.swiper-wrapper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding-top: 90rpx;
  background-color: white;
}
.swiper-wrapper swiper,
.swiper-wrapper scroll-view {
  width: 100%;
  height: 100%;
}
.swiper-wrapper swiper .order-list,
.swiper-wrapper scroll-view .order-list {
  overflow: hidden;
  padding: 0rpx 30rpx 260rpx 30rpx;
}
.swiper-wrapper swiper .order-list .load-more,
.swiper-wrapper scroll-view .order-list .load-more {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #888;
}
.mask {
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask .mask-content {
  width: 660rpx;
  background-color: #EDEDED;
  background-color: white;
  border-radius: 20rpx;
  padding: 60rpx 60rpx 50rpx 60rpx;
  box-sizing: border-box;
  position: relative;
}
.mask .mask-content .close-btn {
  position: absolute;
  right: 26rpx;
  top: 26rpx;
  color: #999;
}
.mask .mask-content .title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
}
.mask .mask-content .icon-check {
  color: #2BA246;
  font-size: 46rpx;
  position: relative;
  top: 4rpx;
  margin-right: 10rpx;
}
.mask .mask-content .btn-c {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mask .mask-content .btn-c .btn {
  padding: 0 10rpx;
  margin: 50rpx 0rpx 0rpx 0rpx;
  width: 46%;
  border-radius: 20rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #ffcc00;
  color: white;
}
.mask .mask-content .btn-c .btn:after {
  border: none;
}

