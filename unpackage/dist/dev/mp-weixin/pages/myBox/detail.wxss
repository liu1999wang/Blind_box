page {
  background: #fafafa;
}
.shang-title {
  background: #FCF6D8;
  color: #F58348;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}
.node-type {
  background: #FCF6D8;
  color: #F58348;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}
button {
  padding: 0;
  margin: 0;
  border-radius: 0;
  background-color: transparent;
}
button::after {
  border: none;
  display: none;
}
button::before {
  display: none;
}
.list-item {
  display: flex;
  align-items: center;
  position: relative;
}
.list-item .status-text {
  font-weight: 500;
}
.list-item .body {
  flex: 1;
  display: flex;
  align-items: center;
  font-weight: 500;
}
.list-item-title {
  flex: 1;
}
.address-c {
  display: flex;
  background: white;
}
.address-c .al-icon-coordinates {
  margin-top: 6rpx;
}
.address-c .body {
  margin-left: 30rpx;
}
.address-c .body .name {
  font-size: 30rpx;
  font-weight: 500;
}
.address-c .body .detail {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #777;
}
.products-c {
  background: white;
  margin-top: 20rpx;
}
.price-wrap {
  background: white;
  padding-top: 20rpx;
  margin-top: 20rpx;
}
.list-item {
  height: 80rpx;
  font-size: 28rpx;
}
.list-item .arrow-right {
  font-size: 26rpx;
  font-weight: bold;
}
.total-price {
  margin-top: 20rpx;
  position: relative;
  line-height: 90rpx;
  text-align: right;
  font-size: 32rpx;
  font-weight: 500;
}
.total-price .key {
  font-size: 28rpx;
}
.total-price .price-c {
  color: red;
  display: inline;
}
.meta-c {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: white;
  margin-top: 20rpx;
}
.meta-c .list-item .arrow-right {
  font-weight: 400;
}
.meta-c .status-text {
  font-weight: 500;
}
.footer {
  display: none;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  box-shadow: 0 -6rpx 8rpx rgba(206, 206, 206, 0.2);
}
.footer .content {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 130rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 30rpx 100rpx 30rpx;
  background-color: #fff;
}
.footer-actions .action-item {
  height: 100rpx;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.footer-actions .action-item .icon {
  font-size: 42rpx;
  line-height: 46rpx;
}
.footer-actions .action-item text {
  font-size: 22rpx;
  line-height: 30rpx;
}
.footer-actions .btn {
  width: 238rpx;
  height: 78rpx;
  border-radius: 40rpx;
  color: #F27233;
  font-size: 26rpx;
  text-align: center;
  line-height: 78rpx;
  margin-left: 30rpx;
  font-weight: 500;
}
.footer-actions .btn.bg-orange {
  background: #f27233;
  color: #FFFFFF;
}
.footer-actions .btn.btn-full {
  width: 600rpx;
}
.detail-image-c {
  margin-top: 30rpx;
  background: white;
  padding: 20rpx 10rpx 100rpx 10rpx;
}
.detail-image-c .image {
  width: 100%;
  display: block;
}

