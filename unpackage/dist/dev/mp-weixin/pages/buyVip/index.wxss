.container {
  padding: 34rpx 0rpx;
}
.container .top-c {
  height: 383rpx;
  padding-top: 160rpx;
  box-sizing: border-box;
  background: url("https://cdn2.hquesoft.com/box/buyVip/bg.png");
  background-size: 100% auto;
  background-position: 0rpx 0rpx;
  background-repeat: no-repeat;
  display: flex;
}
.container .top-c .cat {
  width: 218rpx;
  height: 233rpx;
  margin-left: 50rpx;
}
.container .top-c .text-c {
  background: url("https://cdn2.hquesoft.com/box/buyVip/text-card.png");
  background-size: 100% auto;
  background-position: 0rpx 0rpx;
  background-repeat: no-repeat;
  width: 478rpx;
  height: 148rpx;
  margin-top: 50rpx;
  padding: 0rpx 0rpx 20rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.container .top-c .text-c .left {
  flex-grow: 1;
}
.container .top-c .text-c .left .top-text {
  font-size: 32rpx;
  font-weight: 800;
  color: #52311A;
}
.container .top-c .text-c .left .bottom-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #8B7566;
}
.container .top-c .text-c .contact-btn {
  padding: 0rpx;
  background: transparent;
  border: 0rpx !important;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  margin-right: 30rpx;
}
.container .top-c .text-c .contact-btn .icon {
  font-size: 36rpx;
}
.container .top-c .text-c .contact-btn text {
  font-size: 24rpx;
}
.container .top-c .text-c .contact-btn:after {
  display: none;
}
.container .body {
  border-radius: 20rpx 20rpx 20rpx 0rpx;
  position: relative;
  top: -20rpx;
  overflow: hidden;
  position: relative;
  width: 100%;
}
.container .body .bg {
  width: 100%;
}
.container .body .price-c {
  position: absolute;
  top: 180rpx;
  width: 100%;
}
.container .body .price-c .item {
  background-size: 100% auto;
  background-repeat: no-repeat;
  height: 206rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0rpx 70rpx;
  padding-bottom: 10rpx;
}
.container .body .price-c .item.month {
  background: url("https://cdn2.hquesoft.com/box/buyVip/card-1.png");
  background-size: 100% auto;
  background-repeat: no-repeat;
}
.container .body .price-c .item.year {
  background: url("https://cdn2.hquesoft.com/box/buyVip/card-2.png");
  background-size: 100% auto;
  background-repeat: no-repeat;
}
.container .body .price-c .item .left {
  flex-grow: 1;
}
.container .body .price-c .item .left .text {
  font-size: 46rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.container .body .price-c .item .left .desc {
  font-size: 26rpx;
  font-weight: bold;
  color: #Fefefe;
}
.container .body .price-c .item .right {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.container .footer {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  left: 0rpx;
}
.container .footer .submit {
  border: 0rpx;
  background: #FFCC0B;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  line-height: 96rpx;
  border-radius: 50rpx;
  width: 660rpx;
  margin: 0rpx auto 30rpx;
}
.container .footer .submit::after {
  display: none;
}

